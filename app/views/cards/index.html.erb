
<h3>Все карточки</h3>

<table class="table">
  <tr>
    <th>Номер</th>
    <th>Оригинал</th>
    <th>Перевод</th>
    <th>Дата просмотра</th>
  </tr>
  <% @cards.each do |card| %> 
  <tr>
    <td><%= card.id %></td>
    <td><%= card.original_text %></td>
    <td><%= card.translated_text %></td>
    <td><%= card.review_date.strftime("%m/%d/%Y")%></td>
  </tr>
  <%end%>
</table>
<p>Всего карточек: <%= Card.all.count %></p>

